{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --unstable main.ts",
    "start:dev": "deno run --allow-net --allow-read --allow-env --unstable --watch main.ts"
  },
  "importMap": "import_map.json",
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}